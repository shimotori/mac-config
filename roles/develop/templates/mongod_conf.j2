# mongod.conf
# Ref. https://docs.mongodb.com/v3.0/reference/configuration-options/

systemLog:
  destination: file
  path: /usr/local/var/log/mongodb/mongod.log
  logAppend: true

storage:
  dbPath: /usr/local/var/mongodb
  mmapv1:
    preallocDataFiles: false
    smallFiles: true

net:
  bindIp: 127.0.0.1

